<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_navi_treasure"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/indicator_navi_treasure"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#dadbdd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <com.example.nayon.nanjicamp.widget.NanumTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="유효기간"
            android:textColor="@color/NanjiTextGray"
            android:textSize="13dp" />

        <com.example.nayon.nanjicamp.widget.NanumTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="2018.06.09"
            android:textColor="#FF0000"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dadbdd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <com.example.nayon.nanjicamp.widget.NanumTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="교환처"
            android:textColor="@color/NanjiTextGray"
            android:textSize="13dp" />

        <com.example.nayon.nanjicamp.widget.NanumTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="난지매표소"
            android:textColor="@color/NanjiTextGray"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#dadbdd" />

    <com.example.nayon.nanjicamp.widget.NanumTextView
        android:id="@+id/nanumTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="* 보물 저장 시 사용가능합니다."
        android:textColor="@color/NanjiTextGray"
        android:textSize="11dp" />


    <ImageView
        android:layout_width="256dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_navi_treasure" />


</LinearLayout>