<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="495dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:id="@+id/frameLayout">

        <com.example.nayon.nanjicamp.layout.MyVideoView
            android:id="@+id/video_intro"
            android:layout_width="360dp"
            android:layout_height="495dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignTop="@+id/frameLayout"
        android:layout_alignParentStart="true">

        <com.example.nayon.nanjicamp.widget.NanumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24°C"
            android:textColor="@color/NanjiTextGray"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.nayon.nanjicamp.widget.NanumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="미세먼지 농도 "
                android:textColor="@color/NanjiTextGray"
                android:textSize="12dp" />

            <com.example.nayon.nanjicamp.widget.NanumBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="좋음"
                android:textColor="@color/NanjiGreen"
                android:textSize="12.5dp" />

        </LinearLayout>

        <com.example.nayon.nanjicamp.widget.NanumTextView
            android:layout_width="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="17°C / 27°C"
            android:textColor="@color/NanjiTextGray"
            android:textSize="12dp" />


    </LinearLayout>


</RelativeLayout>