<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.nayon.nanjicamp.widget.CustomLinearLayout
        android:id="@+id/item_root_reserve_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="235dp"
            android:layout_height="235dp"
            android:id="@+id/lay_reserve_1"
            android:gravity="center">

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="235dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/background_reserve_3">

                <ImageView
                    android:id="@+id/img_reserve_1"
                    android:layout_marginBottom="10dp"
                    android:layout_width="160dp"
                    android:layout_height="120dp" />

                <com.example.nayon.nanjicamp.widget.NanumBoldTextView
                    android:text="담요"
                    android:id="@+id/txt_reserve_1_1"
                    android:layout_margin="2dp"
                    android:textSize="16dp"
                    android:textColor="@color/NanjiGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.example.nayon.nanjicamp.widget.NanumTextView
                    android:text="울랄라우랄랄"
                    android:layout_width="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="14dp"
                    android:id="@+id/txt_reserve_1_2"
                    android:textColor="@color/NanjiTextGray"
                    android:layout_height="wrap_content" />

                <com.example.nayon.nanjicamp.widget.NanumTextView
                    android:text="느앙앙"
                    android:id="@+id/txt_reserve_1_3"
                    android:layout_width="wrap_content"
                    android:textColor="@color/NanjiTextGray"
                    android:textSize="11dp"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content"/>



            </LinearLayout>


            <ImageView
                android:id="@+id/backgroud_reserve_1_check"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:layout_centerInParent="true"
                android:background="@drawable/background_reserve_3_checked" />

            <ImageView
                android:id="@+id/video_reserve_1_checked"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00ffffff" />



        </RelativeLayout>


    </com.example.nayon.nanjicamp.widget.CustomLinearLayout>

</LinearLayout>