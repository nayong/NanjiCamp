<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.nayon.nanjicamp.layout.MyVideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/video_ar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:visibility="gone"
        android:id="@+id/img_ar_animal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="110dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="10dp"
        android:id="@+id/lay_ar_top"
        android:layout_marginTop="25dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/btn_ar_gps"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_ar_gps" />

        <Space
            android:layout_width="220dp"
            android:layout_height="0dp" />


        <ImageView
            android:id="@+id/btn_ar_switch"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_ar_switch_on" />

    </LinearLayout>


</RelativeLayout>
