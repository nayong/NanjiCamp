<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <com.example.nayon.nanjicamp.widget.NanumBoldTextView
        android:id="@+id/txt_nav_stamp_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="JIsuk_e 님"
        android:textColor="@color/NanjiTextGray"
        android:textSize="18dp" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="17dp">

        <com.example.nayon.nanjicamp.widget.NanumBoldTextView
            android:id="@+id/txt_nav_stamp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Nanji Master"
            android:textColor="#57B694"
            android:textSize="14dp" />

        <com.example.nayon.nanjicamp.widget.NanumBoldTextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="까지 스탬프 "
            android:id="@+id/txt_nav_stamp_3"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/NanjiTextGray"
            android:textSize="12dp"/>

        <com.example.nayon.nanjicamp.widget.NanumBoldTextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/txt_nav_stamp_4"
            android:textColor="#F89F1B"
            android:textSize="17dp"/>

        <com.example.nayon.nanjicamp.widget.NanumBoldTextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개를 모아야 해요!"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/txt_nav_stamp_5"
            android:textColor="@color/NanjiTextGray"
            android:textSize="12dp"/>

    </LinearLayout>

    <VideoView
        android:id="@+id/video_navi_stamp_gauge"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.example.nayon.nanjicamp.widget.NanumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="사용 가능한 쿠폰 "
            android:textColor="@color/NanjiTextGray"
            android:textSize="12dp"
            android:textStyle="bold" />

        <com.example.nayon.nanjicamp.widget.NanumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="1"
            android:textColor="#F89F1B"
            android:textSize="17dp" />

        <com.example.nayon.nanjicamp.widget.NanumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="개"
            android:textColor="@color/NanjiTextGray"
            android:textSize="12dp" />

        <com.example.nayon.nanjicamp.widget.NanumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:text="유효기간 : 스탬프 획득일로부터 1년"
            android:textColor="#6D6D6D"
            android:textSize="9dp" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:id="@+id/img_navi_stamp"
        android:src="@drawable/img_navi_stamp"/>

    <com.example.nayon.nanjicamp.widget.NanumBoldTextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="스탬프 완성 시 1회 입장권 무료"
        android:textColor="#BBBCBE"
        android:textSize="12dp"
        android:layout_margin="5dp"/>




