<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.nayon.nanjicamp.widget.CustomLinearLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/lay_reserve_3"
                android:layout_width="250dp"
                android:layout_height="357dp"
                android:background="@drawable/background_reserve_3"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_reserve_3"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="20dp" />

                <com.example.nayon.nanjicamp.widget.NanumBoldTextView
                    android:id="@+id/txt_reserve_3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="담요"
                    android:textColor="@color/NanjiGreen"
                    android:textSize="16dp" />

                <com.example.nayon.nanjicamp.widget.NanumTextView
                    android:id="@+id/txt_reserve_3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="울랄라우랄랄"
                    android:textColor="@color/NanjiTextGray"
                    android:textSize="14dp" />

                <com.example.nayon.nanjicamp.widget.NanumTextView
                    android:id="@+id/txt_reserve_3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="느앙앙"
                    android:textColor="@color/NanjiTextGray"
                    android:textSize="11dp" />
                <com.example.nayon.nanjicamp.widget.NanumTextView
                    android:id="@+id/txt_reserve_3_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="느앙앙"
                    android:textColor="@color/NanjiTextGray"
                    android:textSize="11dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/backgroud_reserve_3_check"
                android:layout_width="239dp"
                android:layout_height="344dp"
                android:layout_centerInParent="true"
                android:background="@drawable/background_reserve_3_checked" />

            <ImageView
                android:id="@+id/video_reserve_3_checked"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00ffffff" />

        </RelativeLayout>

    </com.example.nayon.nanjicamp.widget.CustomLinearLayout>

</LinearLayout>